{
  "name": "vudesigner",
  "description": "efficient web-based-ui editor",
  "version": "0.2.0",
  "private": true,
  "main": "background.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "preinstall": "npx npm-force-resolutions",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "io.vudesigner.vudesigner",
    "productName": "VuDesigner",
    "npmArgs": "--production",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "freuwoert",
          "repo": "vudesigner"
        }
      ]
    },
    "nsis": {
      "runAfterFinish": false,
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "fileAssociations": [
    {
      "name": "VuDesigner VDD",
      "description": "VuDesigner Document",
      "ext": [
        "vdd"
      ]
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freuwoert/vudesigner.git"
  },
  "keywords": [
    "css",
    "html",
    "layout",
    "editor",
    "vudesigner"
  ],
  "author": "Maurice FreuwÃ¶rt",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/freuwoert/vudesigner/issues"
  },
  "homepage": "https://github.com/freuwoert/vudesigner#readme",
  "dependencies": {
    "animejs": "^3.2.0",
    "chai-as-promised": "^7.1.1",
    "color-convert": "^2.0.1",
    "core-js": "^3.6.5",
    "electron-log": "^4.1.2",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.3.1",
    "emmet": "^2.0.0",
    "fuse.js": "^3.6.1",
    "glob": "^7.1.6",
    "jquery": "^3.5.1",
    "lodash.clonedeep": "^4.5.0",
    "minimist": "^1.2.5",
    "mousetrap": "^1.6.5",
    "path": "^0.12.7",
    "pretty": "^2.0.0",
    "prismjs": "^1.20.0",
    "uuid": "^8.0.0",
    "vue": "^2.6.11",
    "vuex": "^3.3.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-router": "^4.3.1",
    "@vue/cli-plugin-unit-mocha": "^4.3.1",
    "@vue/cli-plugin-vuex": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/test-utils": "1.0.0-beta.31",
    "chai": "^4.1.2",
    "electron": "^7.2.4",
    "electron-builder": "^22.6.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-electron-builder": "^1.4.6",
    "vue-devtools": "^5.1.3",
    "vue-template-compiler": "^2.6.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "resolutions": {
    "minimist": "1.2.5",
    "yargs-parser": "18.1.2"
  }
}
